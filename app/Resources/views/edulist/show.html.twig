{% extends 'base.html.twig' %}

{% block content %}

<section id="page-title" class="padding-top-10 padding-bottom-15 padding-left-10" >
    <h2>Education - Show </h2>
    <div class="container-fluid container-fullw bg-white">
        <!-- start: PAGE TITLE -->
        <div class="col-md-12">



            <div class="container-fluid container-fullw">
                <div class="row">
                    <div class="col-md-12">
                        <h5 class="over-title margin-bottom-15"> <span class="text-bold">Educational List</span></h5>
                        <div class="row">

                        </div>

                        <div class="table-responsive">
                            <table class="table table-striped table-hover" id="sample_2">






        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ eduList.id }}</td>
            </tr>
            <tr>
                <th>Edtitle</th>
                <td>{{ eduList.edTitle }}</td>
            </tr>
            <tr>
                <th>Eddescription</th>
                <td>{{ eduList.edDescription }}</td>
            </tr>
            <tr>
                <th>Edcreatedat</th>
                <td>{% if eduList.edCreatedAt %}{{ eduList.edCreatedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('edulist_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('edulist_edit', { 'id': eduList.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
            <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times</span>
                            </button>
                            <h4 class="modal-title" id="myModalLabel">Are you sure want to delete?  </h4>
                        </div>
                        <div class="modal-body">
                            <b>Continue to delete? <h2> Education ID No : {{ eduList.id }}</h2></b>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-primary btn-o" data-dismiss="modal">
                                Cancel
                            </button>
                            <button type="submit" class="btn btn-danger">Delete</button>

                        </div>
                    </div>
                </div>
            </div>
            <!-- /Default Modal -->
            <div class="panel-footer" data-has-confirm-button="btn btn-primary btn-o pull-right" data-toggle="modal" data-target="#myModal">
                <span class="btn btn-danger">Delete</span></div>
            {{ form_end(delete_form) }}

        </li>
    </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
{% endblock %}
