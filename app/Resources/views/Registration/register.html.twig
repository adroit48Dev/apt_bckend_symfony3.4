{% extends 'base.html.twig' %}

{% block content %}
    <section>
    {#{% if is_granted('ROLE_SUPER_ADMIN') %}#}

    <section id="page-title" class="padding-top-15 padding-bottom-15 padding-left-15" >
        <h2>Employee Creation</h2>
        <div class="container-fluid container-fullw bg-white">
            <!-- start: PAGE TITLE -->
            <div class="col-md-12">

                <div class="panel panel-white no-radius">
                    <div class="panel-heading">

                        {{ form_start(form) }}


                        <div class="form-group-sm">
                            {{ form_row(form.empName, {'attr': {'class': 'form-control'}}) }}
                        </div>

                        <div class="form-group-sm ">
                            {{ form_row(form.empMail, {'attr': {'class': 'form-control'}}) }}
                        </div>

                        <div class="form-group-sm ">
                            {{ form_row(form.empPerMail, {'attr': {'class': 'form-control'}}) }}
                        </div>

                        <div class="form-group-sm ">
                            {{ form_row(form.empMobile, {'attr': {'class': 'form-control', 'placeholder': '+919876543210'}}) }}
                        </div>

                        <div class="form-group-sm " >
                            {{ form_row(form.empMobileTwo, {'attr': {'class': 'form-control', 'placeholder': '+919876543210'}}) }}
                        </div>





                        <div class="form-group-sm ">
                            {{ form_row(form.empAddressFieldOne, {'attr': {'class': 'form-control'}}) }}
                        </div>

                        <div class="form-group-sm ">
                            {{ form_row(form.empAddressFieldTwo, {'attr': {'class': 'form-control'}}) }}
                        </div>

                        <div class="form-group-sm ">
                            {{ form_row(form.city, {'attr': {'class': 'form-control'}}) }}
                        </div>

                        <div class="form-group-sm ">
                            {{ form_row(form.state, {'attr': {'class': 'form-control'}}) }}
                        </div>

                        <div class="form-group-sm ">
                            {{ form_row(form.username, {'attr': {'class': 'form-control'}}) }}
                        </div>

                        <div class="form-group-sm ">
                            {{ form_row(form.password, {'attr': {'class': 'form-control'}}) }}
                        </div>

                        <div class="form-group-sm">
                            {{ form_row(form.empId, {'attr': {'class': 'form-control', 'placeholder': 'Example: APT-0014'}}) }}

                        </div>
                        <br>

                        <div class="form-group-sm ">
                            {{ form_row(form.roles) }}
                        </div>


                        <br>


                        <div class="form-group-sm" >
                            <label for="form.empDept">Department</label>
                            {{ form_widget(form.empDept,  { 'label': 'Department' }  )}}</div>
                        <br>

                        <div class="form-group-sm" >
                            <label for="form.empStatus">Status</label>
                            {{ form_widget(form.empStatus,  { 'label': 'Status' }  )}}</div>

                        <br>
                        <div class="form-group-sm" >
                            <label for="form.empType">Type</label>
                            {{ form_widget(form.empType,  { 'label': 'Type' }  )}}</div>



                        <br>




                        {#<input type="submit" class="btn btn-primary" value="Create"/>#}

                        {{ form_end(form) }}

                        {% for label, messages in app.flashes %}
                            {% for message in messages %}
                                <div class="flash-{{ label }}">
                                    {{ message }}
                                </div>
                            {% endfor %}
                        {% endfor %}
                        {#{% for message in app.flashes('error') %}#}
                        {#<div class="flash-notice">#}
                        {#{{ message }}#}
                        {#</div>#}
                        {#{% endfor %}#}
                        <br>
                        {#{% endif %}#}

                    </div>
                </div>
            </div>
        </div>
    </section>


{% endblock %}