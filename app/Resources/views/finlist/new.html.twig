{% extends 'base.html.twig' %}

{% block content %}
<section id="page-title" class="padding-top-15 padding-bottom-15 padding-left-15" >

    <h2>Create New Finance Plan</h2>
    <div class="container-fluid container-fullw bg-white">
        <!-- start: PAGE TITLE -->
        <div class="col-md-9">

            <div class="panel panel-white no-radius">
                <div class="panel-heading">
                    <h5 class="panel-title">FP creation</h5>
                </div>
                <div class="container-fluid container-fullw">
                    <div class="row">
                        <h1></h1></br>



    {{ form_start(form) }}

                        <div class="form-group">
                            <h5 class="text-bold margin-top-25 margin-bottom-15">
                                Title
                            </h5>
                            {{ form_widget(form.finTitle, {'attr' : {'class': 'form-control'}}) }}
                        </div>

                        <div class="form-group">
                            <h5 class="text-bold margin-top-25 margin-bottom-15">
                                Description
                            </h5>
                            {{ form_widget(form.finDescription, {'attr' : {'class': 'form-control'}}) }}
                        </div>

                        <div class="form-group">
                            <h5 class="text-bold margin-top-25 margin-bottom-15">
                                Location
                            </h5>
                            {{ form_widget(form.finLocation, {'attr' : {'class': 'form-control'}}) }}
                        </div>

                        <div class="form-group">
                            <h5 class="text-bold margin-top-25 margin-bottom-15">
                                Plan
                            </h5>
                            {{ form_widget(form.finPlan, {'attr' : {'class': 'form-control'}}) }}
                        </div>

                        <div class="form-group">
                            <h5 class="text-bold margin-top-25 margin-bottom-15">
                                Type
                            </h5>
                            {{ form_widget(form.finType) }}
                        </div>



                        <div class="form-group">
                            <h5 class="text-bold margin-top-25 margin-bottom-15">
                                Added By
                            </h5>
                            {{ form_widget(form.finAddedBy, {'attr' : {'class': 'form-control'}}) }}
                        </div>

                        <div class="form-group">
                            <h5 class="text-bold margin-top-25 margin-bottom-15">
                                Created on
                            </h5>
                            {{ form_widget(form.finCreatedAt) }}
                        </div>


        <input type="submit" class="btn btn-success" value="Create" />



            <a href="{{ path('finlist_index') }}" class="btn btn-primary pull-right">Back to the list</a>
                        {{ form_end(form) }}

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
{% endblock %}
