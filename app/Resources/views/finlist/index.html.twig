{% extends 'base.html.twig' %}

{% block content %}

<section id="page-title" class="padding-top-10 padding-bottom-15 padding-left-10" >
    <h2>FP - List</h2>
    <div class="container-fluid container-fullw bg-white">
        <!-- start: PAGE TITLE -->
        <div class="col-md-12">



            <div class="container-fluid container-fullw">
                <div class="row">
                    <div class="col-md-12">
                        <h5 class="over-title margin-bottom-15"> <span class="text-bold">FPlan List</span></h5>
                        <div class="row">

                        </div>

                        <div class="table-responsive">
                            <table class="table table-striped table-hover" id="sample_2">





        <thead>
            <tr>
                <th>Id</th>
                <th>Fintitle</th>
                <th>Findescription</th>
                <th>Finplan</th>
                <th>Fincreatedat</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for finList in finLists %}
            <tr>
                <td><a href="{{ path('finlist_show', { 'id': finList.id }) }}">{{ finList.id }}</a></td>
                <td>{{ finList.finTitle }}</td>
                <td>{{ finList.finDescription }}</td>
                <td>{{ finList.finPlan }}</td>
                <td>{% if finList.finCreatedAt %}{{ finList.finCreatedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                    <ul>

                        <li>
                            <a href="{{ path('finlist_edit', { 'id': finList.id }) }}" class="btn btn-light-azure">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
                            </table>

    <ul>
        <li>
            <a href="{{ path('finlist_new') }}" class="btn btn-success">Create a new finList</a>
        </li>
    </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

{% endblock %}
