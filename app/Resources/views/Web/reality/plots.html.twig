{% extends 'Web/base1.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}
{% block content %}
    <div class="container-fluid container-fullw bg-custom">

        <section id="page-title " class="padding-top-10 padding-bottom-15 padding-left-10 bg-white navbar-static-top" >
            <h2>Reality | Plots </h2>
        </section>

        <!-- start: PAGE TITLE -->
        <div class="col-md-12">



            <div class="container-fluid container-fullw">
                <div class="row">
                    <div class="col-md-12">
                        <h5 class="over-title margin-bottom-15"> <span class="text-bold">Plots/Lands</span></h5>
                        <div class="row">

                        </div>


                        {% for reals in real %}


                        <div class="col-md-12">

                            <div class="panel panel-white" id="panel1">

                                <div class="panel-heading">

                                    <h2 class="panel-title"><b>{{ reals.realTitle }}</b></h2>
                                </div>


                                <div class="fa-hover col-md-3 col-sm-4">
                                    <i class="ti-direction">  </i> {{ reals.realAvailable}}</div><br>

                                <div class="fa-hover col-md-3 col-sm-4">
                                    <i class="ti-map-alt">  </i>  {{ reals.realLocation.city }}
                                </div><br>

                                <div class="fa-hover col-md-3 col-sm-4">
                                    <i class="ti-flag-alt"> </i>

                                    {{ reals.realType.realTitle }}
                                </div>
                                <br>
                                <div class="panel-body">

                                    {{ reals.realDescription | length >50 ? reals.realDescription|slice(0, 50) ~ '...' : reals.realDescription  }}

                                    </div>

                                    <div class="panel-footer">
                                        <div class="fa-hover col-md-3 col-sm-4">Posted :
                                            <i class="ti-calendar"> </i> {{ reals.realCreatedAt |date("Y-m-d", "Asia/Kolkata") }} </div>



                                        <a href="{{ path('view_real_detail', {'id': reals.id}) }}"  type="submit" class=""><span>View</span></a>

                                    </div>

                                    </div>
                                </div>
                        {% endfor %}
                            </div>
                    <div class="navigation" align="right" >
                        {{ knp_pagination_render(real) }}

                    </div>


                        </div>



                    </div>
                </div>
            </div>


{% endblock %}

{% block javascripts %}

    {{ parent () }}
{% endblock %}